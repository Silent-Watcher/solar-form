main#form_container.position-relative.w-100
  form#signup__form.animate__animated.d-flex.justify-content-center.flex-column.position-absolute.rounded.p-4.text-info(action='' method='post' autocomplete='off')
    span.animate__animated.capsLockTextMsg.pt-1(hidden) CapsLock is on!
    section#signup__form__header.d-flex.justify-content-between.align-items-center
      h2#signup__form__heading.user-select-none.animate__animated.animate__tada.animate__delay-1s signUp
      #signup__form__social__buttons
        button.btn.btn-info
          a.text-white(tabindex='-1' href='#')
            i.fa-brands.fa-google
        button.btn.btn-info
          a.text-white(tabindex='-1' href='#')
            i.fa-brands.fa-facebook-f
        button.btn.btn-info
          a.text-white(tabindex='-1' href='#')
            i.fa-brands.fa-github
    .d-flex.justify-content-center.align-items-center.mt-4.position-relative
      input#signup__form__name__input.char_input(type='text' name='' placeholder='enter your username' required='')
      label.position-absolute.char_label(for='signup__form__name__input') Username
      i.position-absolute.fa-solid.fa-user.form_icon
      i.fa-solid.fa-circle-check.check_icon.ms-1(hidden='')
    .d-flex.justify-content-center.align-items-center.mt-4.position-relative
      input#signup__form__email__input.char_input(type='email' name='' placeholder='enter your email' required='')
